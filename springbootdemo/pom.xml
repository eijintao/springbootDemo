    <!--                解决电脑公司两用的时候setting文件会互相污染的问题。那么就每个项目里面都配置
                阿里云镜像，这样就不需要再去找idea中maven的配置了。

                repositories是负责jar的下载，pluginRepositories是负责plugin插件的下载，
                如果不设置后者，则遇到的plugin都将去 maven 中心仓库下载啦
                问题一：
                但是这样做有一个后果，就是 他们会把jar包都下载到c盘的repository文件夹里面
                解决： idea的maven设置中设置文件路径的重写
                    -->
    <!-- 配置阿里云仓库 -->
    <repositories>
        <repository>
            <id>aliyun-repos</id>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    <pluginRepositories>
        <pluginRepository>
            <id>aliyun-repos</id>
            <url>https://maven.aliyun.com/repository/public</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>
